<div class="register-container">
    <% if (error) { %>
        <p class="alert"><%= error %></p> <!-- Display the error message -->
    <% } %>
    <h1>Register</h1>
    <form action="/usr/352/users/registered" method="POST">
        <input type="email" name="email" placeholder="Email" value="<%= formData.email || '' %>" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Register</button>
    </form>
    <p>Already have an account? <a href="/usr/352/users/login">Login here</a></p>
</div>