<div class="login-container">
    <% if (messages.error && messages.error.length > 0) { %> 
        <script type="text/javascript">
            alert('<%= messages.error[0] %>');  <!-- Show flash message -->
        </script>
        <p><%= messages.error[0] %></p>  <!-- Also display the message in text format for debugging -->
    <% } %>
    <h1>Login</h1>
    <form action="/users/loggedin" method="POST">
        <input type="email" name="email" placeholder="Email" value="<%= formData.email || '' %>" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Login</button>
    </form>
    <p>Don't have an account? <a href="/users/register">Register here</a></p>
</div>
