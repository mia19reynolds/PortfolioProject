<div class="login-container">
    <% if (error) { %>
        <p class="alert"><%= error %></p> <!-- Display the error message -->
    <% } %>

    <h1>Login</h1>
    <form action="/users/loggedin" method="POST">
        <input type="email" name="email" placeholder="Email" value="<%= formData.email || '' %>" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Login</button>
    </form>
    <p>Don't have an account? <a href="/users/register">Register here</a></p>
</div>

<% if (flashMessage && flashMessage.length > 0) { %>
    <script>
        // Ensure flashMessage is properly rendered as raw HTML
        alert('<%= flashMessage[0] %>');  <!-- Display the flash message using a simple alert -->
    </script>
<% } %>

