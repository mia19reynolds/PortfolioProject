<div class="login-container">
    <% if (error) { %>
        <p class="alert"><%= error %></p> <!-- Display the error message -->
    <% } %>
    <% if (messages.error) { %>
        <script type="text/javascript">
            alert('<%= error %>'); 
        </script>
    <% } %>
    <h1>Login</h1>
    <form action="/users/loggedin" method="POST">
        <input type="email" name="email" placeholder="Email" value="<%= formData.email || '' %>" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Login</button>
    </form>
    <p>Don't have an account? <a href="/users/register">Register here</a></p>
</div>
